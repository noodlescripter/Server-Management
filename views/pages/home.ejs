<%- layout('./templates/boilerplate') %>
    <div class="container">
        
    </div>
    <div class="row">
        <div class="col-6 offset-3">

            <% for(let server of servers) { %>
                <div class="card mt-2">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= server.serverName %>
                        </h5>
                        <% if(server.serverStatus){ %>
                            <h6 class="card-subtitle mb-2 text-body-secondary">
                                <p class="text-success">Online</p>
                            </h6>
                        <% } %>
                        <% if(!server.serverStatus){ %>
                            <h6 class="card-subtitle mb-2 text-body-secondary">
                                <p class="text-danger">Offline</p>
                            </h6>
                        <% } %>
                        <p class="card-text">
                            <ul class="list-group">
                                <li class="list-group-item"><b>CPU: </b><%= server.cpu %> cores</li>
                                <li class="list-group-item"><b>RAM: </b><%= server.ram %> GB</li>
                                <li class="list-group-item"><b>Space: </b><%= server.diskspace %> GB</li>
                            </ul>
                        </p>
                    
                        <a href="#" class="btn btn-danger <%= !server.serverStatus ? 'disabled' : null %>">Stop</a>
                        <a href="#" class="btn btn-success <%= server.serverStatus ? 'disabled' : null %>">Start</a>
                        <a href="#" class="btn btn-warning">Edit</a>
                    </div>
                </div>
                <% } %>
        </div>
    </div>